<div id="containerForm" class="card mx-basic my-basic hide">
    <form id="formHab" action="/catalogo/habitacion/" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="input-field col s12">
                <input id="precio" name="precio" type="text" class="validate">
                <label for="precio">Precio</label>
            </div>
        </div>
        
        <div class="row">
            <div class="input-field col s4">
                <input id="capacidad" name="capacidad" type="text" class="validate">
                <label for="capacidad">Capacidad</label>
            </div>
            <div class="input-field col s4">
                <input id="descripcion" name="descripcion" type="text" class="validate">
                <label for="descripcion">Descripcion</label>
            </div>
            <div class="input-field col s4">
                <input id="estado" name="estado" type="text" class="validate">
                <label for="estado">Estado</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <div class="file-field input-field">
                    <div class="btn">
                        <span>Imagen</span>
                        <input id="imagen" name="imagen" type="file">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col s1 offset-s10">
            <button type="submit" id="btnGuardar"
                class="">Registrar</button>
        </div>
        <div class="col s1">
            <button id="btnCancelar" class="">Cancelar</button>
        </div>
    </div>
</div>