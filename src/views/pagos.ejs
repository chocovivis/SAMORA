<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="assets/css/pagos.css">
    <title>Métodos de pago</title>
</head>

<body>

    <header>

        <%-include ("comunes/componentes/barra_lateral2") -%>

    </header>

    <div>
        <label class="titulo">
            OPCIONES DE PAGO
        </label>
    </div>

    <form class="tamanoForm">
        <!-- Div de métodos de pago -->

        <div class="centrarFormulario redondearBordes tamanoFormulario">

            <div class="alinearColumnas">

                <!-- Div del título -->

                <div class="alinearColumnas colorArribaAbajo">
                    <label class="centrarTitulo espacios fuenteTitulo">
                        Agregar una tarjeta de crédito o débito
                    </label>
                </div>

                <div class="colorCentro fuenteDatos">
                    <!-- Div de datos de la tarjeta -->

                    <div class="izqDerDatos">

                        <div class="datosTarjeta">

                            <div class="espacios">
                                <label>
                                    Número de tarjeta
                                </label>
                            </div>

                            <div class="espacios">
                                <label>
                                    Nombre en la tarjeta
                                </label>
                            </div>

                            <div class="espacios">
                                <label>
                                    Fecha de vencimiento
                                </label>
                            </div>

                        </div>

                        <div class="datosTarjetaCentro">
                            <div class="alinearColumnas">
                                <div class="espacios">
                                    <input type="text" class="cuadrosTexto">
                                </div>
                                <div class="espacios">
                                    <input type="text" class="cuadrosTexto">
                                </div>

                                <div class="alinearFilas">

                                    <div class="espacios">
                                        <select name="mes">
                                            <option value="mes1" selected>01</option>
                                            <option value="mes2">02</option>
                                            <option value="mes2">03</option>
                                            <option value="mes2">04</option>
                                            <option value="mes2">05</option>
                                            <option value="mes2">06</option>
                                            <option value="mes2">07</option>
                                            <option value="mes2">08</option>
                                            <option value="mes2">09</option>
                                            <option value="mes2">10</option>
                                            <option value="mes2">11</option>
                                            <option value="mes2">12</option>
                                        </select>
                                    </div>

                                    <div class="espacios">
                                        <select name="anio">
                                            <option value="anio1" selected>2022</option>
                                            <option value="anio">2023</option>
                                            <option value="anio">2024</option>
                                            <option value="anio">2025</option>
                                            <option value="anio">2026</option>
                                            <option value="anio">2027</option>
                                            <option value="anio">2028</option>
                                            <option value="anio">2029</option>
                                            <option value="anio">2030</option>
                                            <option value="anio">2031</option>
                                            <option value="anio">2032</option>
                                            <option value="anio">2033</option>
                                            <option value="anio">2034</option>
                                            <option value="anio">2035</option>
                                            <option value="anio">2036</option>
                                            <option value="anio">2037</option>
                                            <option value="anio">2038</option>
                                            <option value="anio">2039</option>
                                            <option value="anio">2040</option>
                                            <option value="anio">2041</option>
                                            <option value="anio">2042</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="datosTarjetaDer">
                            <label class="espacios fuenteTarjetasAceptadas">
                                Tarjetas aceptadas:
                            </label>

                            <div class="alinearColumnas">
                                <div class="alinearFilas">
                                    <img src="assets/img/Logo Paypal.png" class="tamanoPayPal">
                                    <img src="assets/img/Logo Visa.png" class="tamanoVisa">
                                </div>

                                <div class="alinearFilas">
                                    <img src="assets/img/Logo Mastercard.png" class="tamanoMastecard">
                                    <img src="assets/img/Logo Mercado Pago.png" class="tamanoMercadoPago">
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- Div de botones -->

                <div class="alinearFilas botonesDerecha colorArribaAbajo">
                    <div>
                        <button type="button" class="botonCancelar margenBotones">
                            Cancelar
                        </button>
                    </div>
                    <div>
                        <button type="button" class="botonAgregar margenBotones">
                            Agregar tarjeta
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </form>

</body>

</html>